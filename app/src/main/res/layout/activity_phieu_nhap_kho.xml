<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lblTacGia"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhieuNhapKhoActivity">

    <Spinner
        android:id="@+id/spnNhanVien"
        android:layout_width="267dp"
        android:layout_height="29dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.888"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spnKho" />

    <TextView
        android:id="@+id/lblNhanVien"
        android:layout_width="98dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Nhân viên:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblKho" />

    <TextView
        android:id="@+id/lblNgayNhap"
        android:layout_width="98dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:text="Ngày nhập:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblNhanVien" />

    <Spinner
        android:id="@+id/spnKho"
        android:layout_width="267dp"
        android:layout_height="29dp"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.888"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtNhapSoLuongNhap" />

    <TextView
        android:id="@+id/lblKho"
        android:layout_width="98dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="Kho:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblSanPham" />

    <Spinner
        android:id="@+id/spnSanPham"
        android:layout_width="270dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.886"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtNhapSoLuongNhap" />

    <TextView
        android:id="@+id/lblSanPham"
        android:layout_width="99dp"
        android:layout_height="28dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:text="Sản phẩm:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtNhapSoLuongNhap" />

    <EditText
        android:id="@+id/edtNgayNhapKho"
        android:layout_width="199dp"
        android:layout_height="41dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.584"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spnNhanVien" />

    <Button
        android:id="@+id/btnChonNgayNhapKho"
        android:layout_width="73dp"
        android:layout_height="41dp"
        android:layout_marginTop="16dp"
        android:text="..."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/edtNgayNhapKho"
        app:layout_constraintTop_toBottomOf="@+id/spnNhanVien" />

    <Button
        android:id="@+id/btnThemMoiPhieuNhapKho"
        android:layout_width="380dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:text="Thêm phiếu nhập"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.451"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtNgayNhapKho" />

    <EditText
        android:id="@+id/edtNhapMaPhieuNhapKho"
        android:layout_width="377dp"
        android:layout_height="46dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Nhập mã phiếu nhập kho"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtNhapSoLuongNhap"
        android:layout_width="377dp"
        android:layout_height="46dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Nhập số lượng nhập kho"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtNhapMaPhieuNhapKho" />

    <ListView
        android:id="@+id/lvPhieuNhapKho"
        android:layout_width="385dp"
        android:layout_height="335dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnThemMoiPhieuNhapKho" />

</androidx.constraintlayout.widget.ConstraintLayout>