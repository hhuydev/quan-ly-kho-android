<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="10">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_weight="9"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txtItemMaPhieuXuatKho"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã phiếu xuất kho">

        </TextView>

        <TextView
            android:id="@+id/txtItemMaNhanVienPhieuXuat"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mã nhân viên">

        </TextView>

        <TextView
            android:id="@+id/txtItemMaHangHoaPhieuXuat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã hàng hóa" />

        <TextView
            android:id="@+id/txtItemMaKhoPhieuXuat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã kho">

        </TextView>

        <TextView
            android:id="@+id/txtItemSoLuongXuat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Số lượng xuất">

        </TextView>

        <TextView
            android:id="@+id/txtItemNgayXuat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ngày xuất"></TextView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="44dp"
        android:layout_weight="1">

        <Button
            android:id="@+id/btnXoaTTPhieuXuatKhoActivity"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#db402c"
            android:text="Xóa" />

    </LinearLayout>


</LinearLayout>