<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/lblTacGia"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PhieuXuatKhoActivity">

    <Spinner
        android:id="@+id/spnNhanVienXuat"
        android:layout_width="267dp"
        android:layout_height="29dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.888"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spnKhoXuat" />

    <TextView
        android:id="@+id/lblNhanVienXuat"
        android:layout_width="98dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:text="Nhân viên:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblKho" />

    <TextView
        android:id="@+id/lblNgayXuat"
        android:layout_width="98dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:text="Ngày xuất:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblNhanVienXuat" />

    <Spinner
        android:id="@+id/spnKhoXuat"
        android:layout_width="267dp"
        android:layout_height="29dp"
        android:layout_marginTop="64dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.888"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtNhapSoLuongXuat" />

    <TextView
        android:id="@+id/lblKho"
        android:layout_width="98dp"
        android:layout_height="32dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="12dp"
        android:text="Kho:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/lblSanPhamXuat" />

    <Spinner
        android:id="@+id/spnSanPhamXuat"
        android:layout_width="270dp"
        android:layout_height="30dp"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.886"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtNhapSoLuongXuat" />

    <TextView
        android:id="@+id/lblSanPhamXuat"
        android:layout_width="99dp"
        android:layout_height="28dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="20dp"
        android:text="Sản phẩm:"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtNhapSoLuongXuat" />

    <EditText
        android:id="@+id/edtNgayXuatKho"
        android:layout_width="199dp"
        android:layout_height="41dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.584"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spnNhanVienXuat" />

    <Button
        android:id="@+id/btnChonNgayXuatKho"
        android:layout_width="73dp"
        android:layout_height="41dp"
        android:layout_marginTop="16dp"
        android:text="..."
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toEndOf="@+id/edtNgayXuatKho"
        app:layout_constraintTop_toBottomOf="@+id/spnNhanVienXuat" />

    <Button
        android:id="@+id/btnThemMoiPhieuXuatKho"
        android:layout_width="380dp"
        android:layout_height="48dp"
        android:layout_marginTop="12dp"
        android:text="Thêm phiếu xuất"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.451"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtNgayXuatKho" />

    <EditText
        android:id="@+id/edtNhapMaPhieuXuatKho"
        android:layout_width="377dp"
        android:layout_height="46dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Nhập mã phiếu xuất kho"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/edtNhapSoLuongXuat"
        android:layout_width="377dp"
        android:layout_height="46dp"
        android:layout_marginTop="16dp"
        android:ems="10"
        android:hint="Nhập số lượng xuất kho"
        android:inputType="textPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edtNhapMaPhieuXuatKho" />

    <ListView
        android:id="@+id/lvPhieuXuatKho"
        android:layout_width="385dp"
        android:layout_height="335dp"
        android:layout_marginTop="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.482"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnThemMoiPhieuXuatKho" />

</androidx.constraintlayout.widget.ConstraintLayout>